html


<div/ id = 'container'>
  <p id = 'p1'> I'm BATMAN (fat edition), click me </p>
  <img src = 'https://wallpaperaccess.com/full/1795659.jpg'/>     
  <img src = 'https://wallpaperaccess.com/full/4606961.jpg'/>
  <p id = 'p2' > im superman(fat edition) rename Me</p>
 </div
 
 
 css
 
 
 #container{
  width : 620px
  display: flex;
  flex-wrap: wrap;
  justify-content: space -around;
  align-item: centre;
  
  
    
}

p, img{
  width: 300px;
  height: 300px;
  border: 1px solid red;
  text-align: centre;
  line-height: 300px;
  cursor: pointer;
}


javascript




para1 = document.getElementById('p1');
para2 = document.getElementById('p2');
batman = para1.nextElementSibling;
superman = para2.prevoiusElementSibling;

para1.onclick = function() {
  if (para1.style.backgroundColor != 'gainsboro') {
    para1.style.backgroundColor = 'gainsboro';
  } else {
    para1.style.backgroundColor = 'green';
  }
}

para2.onclick = function() {
  if (para2.innerHTML != 'Clark Kent') {
    para2.innerHTML = 'Clark Kent';
  } else {
    para2.innerHTML = 'Superman';
  }
}

batman.dbclick = function () {
  batman.style.backgroundImage = "url (https://th.bing.com/th/id/OIP.w1bYh5_YW3TOwON6cjHcKwHaHa?pid=ImgDet&rs=1)";
}

superman.dbclick = function () {
  batman.style.backgroundImage = "url (https://vignette.wikia.nocookie.net/heros/images/f/f3/Clark_Kent_DCEU_Infobox.jpg/revision/latest?cb=20200627132110&path-prefix=fr)";
}






















