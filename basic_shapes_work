javascriptdocument.getElementById("circle").onmouseover = function (){
  event.target.style.backgroundColor = "orange";
}
  
document.getElementById("rectangle").ondblclick = function (){
  event.target.style.backgroundColor = "purple";
}
 
document.getElementById("squares").onclick = function (){
  event.target.style.backgroundColor = "white";
}
  
document.getElementById("oval").onclick = function (){
  event.target.style.backgroundColor = "cyan";
}
  
